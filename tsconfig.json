{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["node"],
    "declaration": false,
    "sourceMap": false
  },
  "include": [
    "index.ts",
    "plugins/**/*.ts",
    "provider/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
